<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_borrowing"
        android:layout_width="318dp"
        android:layout_height="63dp"
        android:layout_marginTop="212dp"
        android:onClick="listBorrowing"
        android:text="List of borrowing books"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_requested"
        android:layout_width="318dp"
        android:layout_height="63dp"
        android:onClick="listRequested"
        android:text="List of requested books"
        app:layout_constraintBottom_toTopOf="@+id/button_accepted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_borrowing"
        app:layout_constraintVertical_bias="0.477" />

    <Button
        android:id="@+id/button_accepted"
        android:layout_width="318dp"
        android:layout_height="63dp"
        android:layout_marginBottom="264dp"
        android:onClick="listAccepted"
        android:text="list of accepted books"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>