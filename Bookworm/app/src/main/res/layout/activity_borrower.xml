<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_borrowing"
        android:layout_width="318dp"
        android:layout_height="63dp"
        android:onClick="listBorrowing"
        android:text="@string/list_of_borrowing_books"
        app:layout_constraintBottom_toTopOf="@+id/button_requested"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_requested"
        android:layout_width="318dp"
        android:layout_height="63dp"
        android:onClick="listRequested"
        android:text="@string/list_of_requested_books"
        app:layout_constraintBottom_toTopOf="@+id/button_accepted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_borrowing" />

    <Button
        android:id="@+id/button_accepted"
        android:layout_width="318dp"
        android:layout_height="63dp"
        android:onClick="listAccepted"
        android:text="@string/list_of_accepted_books"
        app:layout_constraintBottom_toTopOf="@+id/add_book_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_requested" />

    <Button
        android:id="@+id/add_book_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addBook"
        android:width="318dp"
        android:height="63dp"
        android:text="@string/add_new_book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_accepted" />

</androidx.constraintlayout.widget.ConstraintLayout>